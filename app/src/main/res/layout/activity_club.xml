<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohit.fb.club">

    <com.darwindeveloper.horizontalscrollmenulibrary.custom_views.HorizontalScrollMenuView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        app:backgroundMenuColor="#d2d2d2"
        app:icon_height="50dp"
        app:icon_width="50dp"
        app:item_backgroundColor="@color/lightgray"
        app:item_colorSelected="@color/colorAccent"
        app:backgroundNotifications="@color/backgroundcolor"
        app:item_marginBottom="4dp"
        app:item_marginLeft="4dp"
        app:item_marginRight="4dp"
        app:item_marginTop="4dp"
        app:item_textColor="#fff"
        app:item_textSize="7sp"
        android:layout_marginTop="70dp"

        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="625dp"
        android:layout_height="394dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/idol_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        app:layout_constraintVertical_bias="0.421" />
"/>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/imageView2"
        android:text="LOGIN" />

    <Button
        android:id="@+id/btnabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:text="About Us" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnlogin"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/inf" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="24sp"
        android:text="INFORMO"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#8B0000"
        android:textSize="24sp"
        android:typeface="monospace" />

</RelativeLayout>
